CUDA_GP_CPP_SOURCES=$(filter-out Geometry/src/GPMultiLevelLocator.cu, $(subst $(CudaCode)/GPTracking/,,$(wildcard $(CudaCode)/GPTracking/Geometry/src/*.cu))) \
   $(subst $(CudaCode)/GPTracking/,,$(wildcard $(CudaCode)/GPTracking/Material/src/*.cu))

