	$(NVCC) $< -M -o $(CUDA_OBJDIR)/$*.d $(NVCC_FLAGS) $(NVCC_INCLUDES)
	$(NVCC) $< -c -dc -o $@ $(NVCC_FLAGS) -DCUDA_SEP_COMP $(CUDA_OPT) $(NVCC_INCLUDES)

