NVCC=nvcc
NVCC_FLAGS=--device-debug -m64 -Xcompiler ,\"-g\" -Xcompiler ,\"-fPIC\"  -arch=sm_20 --use_fast_math --ptxas-options=-v -DNVCC
NVCC_INCLUDES=-I$(CudaCode)/GPTracking/Common/include  -I$(CudaCode)/GPTracking/EMPhysics/include -I$(CudaCode)/GPTracking/Geometry/include -I$(CudaCode)/GPTracking/Material/include -I$(CudaCode)/GPTracking/Transportation/include -I$(CudaCode)/GPTracking/Common/src -I$(CudaCode)/GPTracking/EMPhysics/src -I$(CudaCode)/GPTracking/Geometry/src -I$(CudaCode)/GPTracking/Material/src -I$(CudaCode)/GPTracking/Transportation/src -I$(CudaCode)/GXTracking/Common/include -I$(CudaCode)/GXTracking/EMPhysics/include -I$(CudaCode)/GXTracking/Geometry/include -I$(CudaCode)/GXTracking/Transportation/include -I$(CudaCode)/GXTracking/kernel/include -I$(CudaCode)/GXTracking/EMPhysics/src -I$(CudaCode)/GXTracking/Geometry/src -I$(CudaCode)/GXTracking/Transportation/src -I$(CudaCode)/GXTracking/kernel/src

CXXFLAGS += -I$(CUDA_INC)
CXXFLAGS += -I$(CudaCode)/GXTracking/Common/include \
   -I$(CudaCode)/GXTracking/kernel/include \
   -I$(CudaCode)/GXTracking/EMPhysics/include \
   -I$(CudaCode)/GPTracking/Common/include \
   -I$(CudaCode)/GPTracking/Transportation/include \
   -I$(CudaCode)/GPTracking/EMPhysics/include \
   -I$(CudaCode)/GPTracking/Geometry/include \
   -I$(CudaCode)/GPTracking/Material/include

CUDA_OBJDIR=obj/cuda

#CUDA_OPT=-O0 --ptxas-options="--opt-level 0"

$(CUDA_OBJDIR):
	mkdir -p $(CUDA_OBJDIR)

#CUDA_OBJ=$(patsubst %.cu,%.o,$(CUDA_SOURCES))

GEANTCUDADICTS = $(SRCDIR)/G__CudaGeant.cxx

$(GEANTCUDADICTS): $(INCDIR)/CudaLinkDef.h
	@echo "Generating dictionary $@"
	$(ROOTSYS)/bin/rootcint -f $@ \
                -c $(INCDIR)/CoprocessorBroker.h $(INCDIR)/CudaLinkDef.h

src/G__CudaGeant.o: $(GEANTCUDADICTS)
	$(ROOTSYS)/bin/rmkdepend -R -f$(SRCDIR)/G__CudaGeant.d -Y -w 1000 -- \
                -I$(INCDIR) -pthread  -D__cplusplus -I$(ROOTSYS)cint/cint/lib/prec_stl \
                -I$(ROOTSYS)cint/cint/stl -I$(ROOTSYS)/cint/cint/inc -- $(GEANTCUDADICTS)
	$(CXX)  $(CXXFLAGS) -I. -I$(ROOTSYS)/include -o $@ \
                -c $(SRCDIR)/G__CudaGeant.cxx


ifeq ($(CudaSingleObj),yes)

#CUDA_SOURCES=GXTracking/kernel/src/tracking_kernel.cu

%.d:%.cu
	$(NVCC) $< -M -o $@ $(NVCC_FLAGS) $(NVCC_INCLUDES)

$(CUDA_OBJDIR)/%.o:$(CudaCode)/%.cu $(CUDA_OBJDIR)
	mkdir -p $(dir $@)
	$(NVCC) $< -c -o $@ $(NVCC_FLAGS) $(CUDA_OPT) $(NVCC_INCLUDES)

else

CUDA_GX_SOURCES=Transportation/src/GXChordFinder.cu Transportation/src/GXMagneticField.cu \
  Transportation/src/GXEquationOfMotion.cu Transportation/src/GXClassicalRK4.cu \
  Transportation/src/GXMagIntegratorDriver.cu Transportation/src/GXFieldManager.cu \
  Geometry/src/GXMultiLevelLocator.cu \
  EMPhysics/src/GXBrem.cu EMPhysics/src/GXIoni.cu EMPhysics/src/GXMsc.cu \
  Transportation/src/GXPropagatorInField.cu Transportation/src/GXTransportation.cu \
  Transportation/src/GXFieldTrack.cu \
